<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="post_upgrade_process_sign_pdfs" model="ir.cron">
        <field name="name">Post Upgrade Process Sign PDFs</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="model_id" ref="sign.model_sign_template"/>
        <field name="state">code</field>
        <field name="code">
pdfs_to_process = model.with_context(active_test=False).search([("num_pages", "=", False)])
env.add_to_compute(model._fields['num_pages'], pdfs_to_process)
        </field>
    </record>
</odoo>
